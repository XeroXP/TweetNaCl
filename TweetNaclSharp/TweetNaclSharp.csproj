<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>XeroXP</Authors>
    <Description>Port of TweetNaCl (http://tweetnacl.cr.yp.to) / NaCl (http://nacl.cr.yp.to/)
to C#.</Description>
    <Copyright>Copyright (c) $(Authors) 2022</Copyright>
    <PackageProjectUrl>https://github.com/XeroXP/TweetNaclSharp</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/XeroXP/TweetNaclSharp.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>tweetnacl, nacl</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
	  <None Include="..\LICENSE">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
	  </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TweetNaclSharp.Core\TweetNaclSharp.Core.csproj" />
  </ItemGroup>

</Project>
